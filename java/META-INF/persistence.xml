<persistence version="3.0" 
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
    https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    >
    <persistence-unit name="siapaBelumMandi">
        <description>kamu</description>
        <class>org.javabrains.koushik.dto.UserDetails</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"></property>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hibernatedb"></property>
            <property name="jakarta.persistence.jdbc.user" value="sa"></property>
            <property name="jakarta.persistence.jdbc.password" value="bar"></property>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"></property>   <!--"drop-and-create"-->            
        </properties>
    </persistence-unit>
</persistence>